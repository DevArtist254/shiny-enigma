doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0") 
        title Create your post here
    body
        main  
            h1 Create your post here

            form#formImage(enctype="multipart/form-data") 
                label(for="imgNames") Unique name
                input#imageName(type="text", name="name") 
                br
                label(for="imageCover") upload one image cover 
                input#imageCover(type="file", name="imageCover")
                br
                label(for="images") upload three images 
                input#images(type="file", name="images")
                br
                input(type="submit", value="submit")
    
    script(src="/js/index.js")
